{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./api",
    "rootDir": "./api"
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"]
}
